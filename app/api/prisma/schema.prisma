generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt()
  email     String   @unique
  password  String
  hashedRt  String?
  Movie     Movie[]

  @@map("users")
}

model Movie {
  id           Int      @id @default(autoincrement())
  createdAt    DateTime @default(now())
  imageUrl     String
  description  String
  releasedYear Int
  rating       Decimal  @db.Decimal(2, 1)
  title        String
  userId       Int
  user         User     @relation(fields: [userId], references: [id])

  @@map("movies")
}
